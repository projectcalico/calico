{
  "kind": "GlobalNetworkPolicy",
  "apiVersion": "projectcalico.org/v3",
  "metadata": {
    "name": "default.policy1",
    "labels": {
      "projectcalico.org/tier": "default"
    }
  },
  "spec": {
    "tier": "default",
    "order": 100,
    "ingress": [
      {
        "action": "Deny",
        "source": {
          "selector": "type=='application'"
        }
      }
    ],
    "selector": "type=='database'",
    "types": [
      "Ingress"
    ]
  }
}
